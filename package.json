{
  "name": "react-redux-universal-starter-kit",
  "version": "1.0.0",
  "description": "A starter kit for a universal web app using react, redux",
  "main": "app.js",
  "scripts": {
    "dev": "better-npm-run dev",
    "postinstall": "npm run build",
    "build": "better-npm-run build",
    "start": "better-npm-run start",
    "lint": "eslint src/* test/*",
    "test": "better-npm-run test",
    "test:watch": "better-npm-run test --watch"
  },
  "betterScripts": {
    "start": {
      "command": "node .",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --config ./webpack.config.prod.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src"
      }
    },
    "dev": {
      "command": "node .",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src"
      }
    },
    "test": {
      "command": "mocha src/shared/tests/specs --recursive --require src/shared/tests/setup.js --compilers js:babel-register ",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suranartnc/react-redux-universal-starter-kit.git"
  },
  "keywords": [
    "react",
    "redux",
    "universal",
    "isomorphic",
    "ES2015",
    "webpack"
  ],
  "author": "Suranart Niamcome",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suranartnc/react-redux-universal-starter-kit/issues"
  },
  "homepage": "https://github.com/suranartnc/react-redux-universal-starter-kit#readme",
  "dependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "autoprefixer": "^6.3.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.8",
    "body-parser": "^1.15.0",
    "bootstrap-loader": "^1.0.10",
    "bootstrap-sass": "^3.3.6",
    "cookie-parser": "^1.4.1",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "cssnano": "^3.5.2",
    "es6-promise": "^3.1.2",
    "express": "^4.13.4",
    "express-jwt": "^3.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "faker": "^3.0.1",
    "file-loader": "^0.8.5",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^2.2.2",
    "json-server": "^0.8.8",
    "jsonwebtoken": "^5.7.0",
    "node-sass": "^3.7.0",
    "postcss-loader": "^0.8.2",
    "react": "^15.0.1",
    "react-addons-css-transition-group": "^15.0.1",
    "react-addons-perf": "^15.0.1",
    "react-addons-shallow-compare": "^15.0.1",
    "react-cookie": "^0.4.5",
    "react-css-modules": "^3.7.6",
    "react-dom": "^15.0.1",
    "react-helmet": "^2.3.1",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-form": "^5.2.3",
    "resolve-url-loader": "^1.4.3",
    "sass-loader": "^3.2.0",
    "sass-resources-loader": "^1.0.2",
    "scroll-behavior": "^0.3.3",
    "style-loader": "^0.13.0",
    "updeep": "^0.14.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "babel-preset-react-hmre": "^1.1.0",
    "chai": "^3.5.0",
    "enzyme": "^2.2.0",
    "eslint": "^2.2.0",
    "mocha": "^2.4.5",
    "nock": "^8.0.0",
    "react-addons-test-utils": "^15.0.1",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.5",
    "redux-mock-store": "^1.0.2",
    "sinon": "^1.17.4",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1"
  }
}
